          <tr>
            <th></th>
            <th>Nome:</th>
            <th>CPF:</th>
            <th>Endere√ßo:</th>
          </tr>
        </thead>
        <tbody>
          <% clientes.forEach(cliente=> { %>
          <tr>
            <td style="text-align: center">
              <img src="imgs/<%=cliente.imagem%>" alt="cliente" />
