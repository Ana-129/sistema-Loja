<%- include ('partials/header.ejs') %> <%- include ('partials/navbar.ejs') %>

<div class="container">
  <div class="card">
    <div class="card-header">
      <h1>Pedidos</h1>
    </div>
    <div class="cliente" style="background-color: #333333">
      <table class="table table-bordered table-hover" style="width: 100%">
        <thead class="table-dark">
          <tr>
            <th></th>
            <th>NÃºmero:</th>
            <th>data:</th>
            <th>cliente:</th>
            <th>produto:</th>
            <th>Valor:</th>
          </tr>
        </thead>
        <tbody>
          <% pedidos.forEach(pedido => { %>
          <tr>
            <td style="text-align: center">
              <img
                src="imgs/<%=pedido.imagem%>"
                class="imagemPedido"
                alt="produto"
              />
            </td>
            <td><%= pedido.numero %></td>
            <td><%= pedido.data%></td>
            <td><%= pedido.cliente%></td>
            <td><%= pedido.produto%></td>
            <td>
              <%= pedido.valor.toLocaleString('pt-br', {style: 'currency',
              currency: 'BRL'}) %>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

